<% if user_signed_in? && @post.favourited_by?(current_user)%>
  <%= link_to "Unfavourite", post_favourite_path(@post, @post.favourite_for(current_user)), method: :delete, class: "glyphicon glyphicon-star" %>
<% else %>
  <%= link_to "Favourite", post_favourites_path(@post), method: :post, class: "glyphicon glyphicon-star-empty" %>
<% end %>
