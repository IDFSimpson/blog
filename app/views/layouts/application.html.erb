<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="menu">
  <%= link_to("Home", home_path, {class: "menu-item"}) %>
  <%= link_to("About", about_path, {class: "menu-item"}) %>
  <%= link_to("Blog Posts", posts_path, {class: "menu-item"}) %>
</div>
<div>
  <%= notice || alert %>
</div>

<%= yield %>

</body>
</html>
